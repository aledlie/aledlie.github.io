/* Social sharing links */

/* Social media brand buttons */
.social-share {
  margin-bottom: 0 + variables.$doc-line-height;
  margin-bottom: 0 +
    math.div(variables.$doc-line-height, variables.$doc-font-size);

  ul,
  li {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  li {
    display: inline-block;
  }

  $social:
    (facebook, variables.$facebook-color), (flickr, variables.$flickr-color),
    (foursquare, variables.$foursquare-color),
    (google-plus, variables.$google-plus-color),
    (instagram, variables.$instagram-color),
    (linkedin, variables.$linkedin-color),
    (pinterest, variables.$pinterest-color), (rss, variables.$rss-color),
    (tumblr, variables.$tumblr-color), (twitter, variables.$twitter-color),
    (vimeo, variables.$vimeo-color), (youtube, variables.$youtube-color);

  @each $socialnetwork, $color in $social {
    .#{$socialnetwork} {
      background: $color;
    }
  }

  a {
    display: block;
    padding: 8px 20px;
    text-decoration: none !important;
    text-transform: uppercase;

    @include mixins.font-rem(14);

    font-family: variables.$heading-font;
    font-weight: 700;
    color: variables.$white;
    opacity: 0.8;

    &:hover {
      opacity: 1;
    }
  }

  span {
    display: none;

    @media #{variables.$medium} {
      display: inline;
      padding-left: 5px;
    }
  }

  h4 {
    @include mixins.font-rem(14);

    margin-bottom: 10px;
    text-transform: uppercase;
  }
}

