   ========================================================================== */

// a <textarea> to hold text for document.execCommand("copy")
.clipboard-helper {
  // Prevent zooming on iOS
  font-size: 12pt !important;
  border: 0 !important;
  padding: 0 !important;
  margin: 0 !important;
  outline: none !important;
  position: absolute;
}

pre {
  &.highlight .clipboard-copy-button {
    color: #ffffca;
  }

  .clipboard-copy-button {
    display: block;
    position: absolute;
    top: 0.6em;
    inset-inline-end: 0.5em;
    width: 1.8em;
    height: 1.5em;
    z-index: 1;
    background: none;
    border: none;
    outline: none;
    border-radius: 0.1em;
    padding: 0.2em 0.5em;
    opacity: 0.4;
    transition: color 0.25s linear -0.25s, opacity 0.25s linear;

    &::before {
