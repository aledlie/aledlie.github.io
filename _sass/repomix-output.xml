      }
    }

    &.copied i {
      opacity: 0;

      &.copied {
        opacity: 1;
      }
    }

    @at-root {
      .no-copy & {
        display: none;
      }
    }
  }

  &:hover .clipboard-copy-button {
    opacity: 1;
  }
}
