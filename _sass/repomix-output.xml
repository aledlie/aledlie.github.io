   ========================================================================== */

figure {
	margin-bottom: $indent-var;
}

article img {
	max-width: 100%;
	height: auto;
	border-width: 0; 
	vertical-align: middle; 
}

svg:not(:root) {
		overflow: hidden; 
}

/* 2 images of equal dimensions in a row */

.half {
	@include container;
	@include clearfix;
	@media #{$micro} {
		img {
			@include grid(12,6);
		}

		figcaption {
			@include grid(12,12);
		}
	}
}

/* 3 images of equal dimensions in a row */

.third {
	@include container;
	@include clearfix;
	@media #{$micro} {
		img {
			@include grid(12,4);
		}

		figcaption {
			@include grid(12,12);
		}
	}
}

/* 
   Buttons
