<file path="main.scss">
---
# Only the main Sass file needs front matter (the dashes are enough)
---

@import "minimal-mistakes";
@use "variables" as *;
@charset "utf-8";

/* Clean, minimal styling inspired by reference design */

/* GLOBAL OVERRIDES - Only what differs from theme defaults */
body {
  font-size: 16px;
  line-height: 1.7;
}

/* HEADER - Compact cover images */
.page-hero {
  height: 100px;
  padding-bottom: 2em;

  .page-hero-image,
  img {
    height: 100px;
    object-fit: cover;
  }

  .page-hero-caption {
    display: none;
  }
}

.page-hero-overlay {
  height: 100px;

  .page-hero-content {
    display: none;
  }
}

/* HEADER BANNER - Red academic banner like target site */
.masthead {
  border-bottom: .5px solid $border-light;
  padding: 2em 0 1em;
}

.greedy-nav {
  font-family: $heading-font;
  text-transform: uppercase;
  text-align: center;
  background: transparent;
  align-items: center;
  margin: 0 auto;
  display: flex;

  .site-title {
    width: 16.6666666667%;
    margin-right: 4.1666666667%;
    margin-left: 4.1666666667%;
  }

  a {
    color: $white;
    &:hover {
      color: $gray-medium;
    }
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    margin-right: 4.1666666667%;
    margin-left: 4.1666666667%;
    a {
      font-weight: 700;
      margin-right: 4.1666666667%;
      white-space: nowrap;
      &:hover {
        border-bottom-color: rgba(255,255,255,0.6);
      }
    }
  }
}

/* MAIN CONTENT - Constrained width and minimal padding */
#main {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0.25rem;
}

.initial-content {
  padding-top: 0;
  margin-top: 0;
}

/* SIDEBAR - Academic profile layout matching target */
.sidebar {
  padding: 2em 1em 1em;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;

  .author-avatar img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-name {
    font-size: 2em;
    font-weight: bold;
    font-family: $heading-font;
  }

  .author-bio {
    font-style: italic;
    color: $gray-medium;
    font-size: 1.1em;
    line-height: 1.4;
  }

  .author-urls {
    margin-top: 0;
    text-align: center;

    li {
      display: block;
      margin-bottom: 0.5em;

      a {
        font-size: 1em;
        color: $academic-red !important;
        text-decoration: none;
        padding: 0.3em 0.5em;
        border-radius: 3px;
        transition: all 0.3s ease;

        &:hover {
          color: $white !important;
          background: $academic-red;
        }
      }
    }
  }

  .btn {
    background: $bg-light !important;
    border: 1px solid $border-medium;
    color: $gray-medium;
    font-size: 1em;
    display: block;

    &:hover {
      background: $bg-lighter !important;
      color: $text-dark !important;
    }
  }
}

/* CONTENT HEADINGS - Enhanced for long-form reading */
.page-content {
  font-family: "Georgia", "Times New Roman", serif;
  font-size: 16px;
  line-height: 1.7;

  h1 {
    font-size: 2em;
    color: $content-text;
    border-bottom: 3px solid $accent-blue;
    padding-bottom: 10px;
  }

  h2 {
    font-size: 1.3em;
    color: $gray-medium;
    font-weight: 500;
    border-bottom: 1px solid $border-light;
  }

  p {
    margin-bottom: 1.5em;
    color: $content-text;
  }

  a {
    color: $accent-blue;
    text-decoration: none;
    border-bottom: 1px dotted $accent-blue;

    &:hover {
      border-bottom: 1px solid $accent-blue;
      color: $accent-blue-dark;
    }
  }

  blockquote {
    border-left: 3px solid $accent-blue;
    padding-left: 1.5rem;
    font-style: italic;
    margin: 2rem 0;
    color: $gray-darker;
    background: $bg-light;
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
  }

  /* Special styling for emotional breaks and contemplative spacing */
  p + p {
    margin-top: 1.75em;
  }
}

/* ARCHIVE LISTINGS - Academic post list matching target */
.archive .list__item,
.archive .archive__item,
.list__item,
.archive__item {

  &:last-child {
    border-bottom: none;
  }

  .archive__item-title {
    font-size: 1.3em;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: $gray-medium;
    font-family: $heading-font;

    a {
      color: $academic-red !important;
      text-decoration: none !important;
      border-bottom: none !important;
      transition: color 0.3s ease;

      &:hover {
        color: $academic-red-dark !important;
      }
    }
  }

  .archive__item-excerpt {
    color: $gray-darker;
    font-size: 1em;
    line-height: 1.6;
    margin-bottom: 0.5rem;
    font-style: italic;
  }

  .archive__item-date {
    display: none;
  }
}

/* Recent Posts heading styling */
.page__content h2 {
  color: $academic-red;
  font-family: $heading-font;
  font-size: 1.8em;
  font-style: bold;
  border-bottom: 2px solid $academic-red;
}

/* Remove grid from card elements */
.card .grid {
  display: block !important;
}

.card .grid > div {
  margin-bottom: 1rem;
}

/* SINGLE POST - Enhanced typography */
.single {
  .page-title {
    font-size: 2.2em;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .page-meta {
    color: $gray-lighter;
    font-size: 0.9em;
    margin-bottom: 2rem;
    border-bottom: 1px solid $border-light;
  }
}

/* GLOBAL LINK OVERRIDES - Clean black text */
a {
  color: $text-dark !important;
  text-decoration: none !important;

  &:hover {
    color: #0066cc !important;
  }
}

/* FOOTER - Clean styling */
.page-footer {
  border-top: 1px solid $border-light;
  margin-top: 3rem;
  padding: 2rem 0;
  text-align: center;

  .page-footer-copyright {
    color: $gray-lighter;
    font-size: 0.85em;
  }
}

/* SOCIAL SHARING */
.page-share {
  border-top: 1px solid $border-light;
  padding-top: 1.5rem;
  margin-top: 2rem;

  .btn {
    margin-right: 0.5rem;
    margin-bottom: 0.5rem;
  }
}

/* RESPONSIVE DESIGN */
@media (max-width: 1024px) {
  #main {
    padding: 0.25rem;
  }

  .sidebar {
    padding: 0.25rem;
    text-align: center;

    .author-avatar img {
      width: 120px;
      height: 120px;
    }
  }

  .page-content {
    padding: 0 0.25rem;
  }
}

@media (max-width: 768px) {
  .greedy-nav {
    padding: 0.1rem 0.5rem;
    flex-direction: column;
    align-items: flex-start;

    .site-title {
      margin-right: 0;
      margin-bottom: 0.1rem;
      font-size: 1.2em;
    }

    .visible-links {
      gap: 0.02rem;

      a {
        padding: 0.1rem 0.2rem;
        font-size: 0.9em;
        font-weight: 900;
      }
    }
  }

  .single .page-title {
    font-size: 1.8em;
  }

  .archive .list__item .archive__item-title {
    font-size: 1.2em;
  }

  .page-content {
    font-size: 15px;
    line-height: 1.6;
    padding: 1rem;
    
    p {
      margin-bottom: 1.25em;
    }

    p + p {
      margin-top: 1.5em;
    }
  }
}
</file>

